@for (int i = 0; i < Model.Count; i++)
{ var product = Model[i];
    <div class="product-container">
        <div class="product-content-container">
            <a asp-controller="Products" asp-action="ProductPage" asp-route-productId="@product.Id" class="product-name">@product.Name</a>
            <img class="product-mainImage" src="/ProductsImages/@product.MainImage">
            <p class="product-element-even">Price: @product.Price $</p>
            <p class="product-element-odd">Description: @product.ShortDescription</p>
            <p class="product-element-even">Warranty: @product.Warranty Months</p>
            <p class="product-element-odd">QuantityInStock: @product.QuantityInStock</p>
        </div>
        <a asp-controller="Products" asp-action="ProductPage" asp-route-productId="@product.Id" class="product-button">Info</a>
        <a asp-controller="Carts" asp-action="AddToCart" asp-route-quantity="1" asp-route-productId="@product.Id" class="product-button">Add</a>
    </div>
}